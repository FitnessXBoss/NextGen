<UserControl x:Class="NextGen.src.UI.Views.UserControls.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Домашняя страница dashboard" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="20"
                   Grid.Row="0"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Padding="10"
                                  Margin="5"
                                  Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Общее число заказов" 
                               FontSize="14" 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalOrders}" 
                               FontSize="24" 
                               FontWeight="Bold"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Место для других элементов статистики -->
        </Grid>
    </Grid>
</UserControl>
